{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "exclude": [
    "src/test",
    "src/**/*.test.*", 
    "src/**/*.spec.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "src/**/test/**",
    "node_modules"
  ]
}
